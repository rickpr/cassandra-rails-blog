<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h2>Comments</h2>
<div id="comments">
  <%= render @post.comments.reverse %>
</div>

<%= bootstrap_form_for([@post, Comment.new], remote: true) do |f| %>
  <%= f.text_area :body, label: "Add a Comment" %>
  <%= f.primary "Submit Comment" %>
<% end %>
<br>
<p>
  <%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-warning' %> |
  <%= link_to 'Home', posts_path, class: 'btn btn-success' %>
</p>
